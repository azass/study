<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
        <RelativeLayout android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end">
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <TableLayout android:layout_width="wrap_content"
                             android:layout_height="match_parent">
                    <TableRow>
                        <TextView android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                                  android:text="前回解答日" android:textAlignment="textEnd"/>
                        <TextView android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                                  android:text="yyyy/MM/dd" android:textAlignment="textEnd"
                                  android:layout_marginStart="8dp" android:layout_marginEnd="2dp"
                                  android:id="@+id/lastRecordDate"/>
                    </TableRow>
                    <TableRow>
                        <TextView android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                                  android:text="前回解答時間" android:textAlignment="textEnd"/>
                        <TextView android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                                  android:text="HH:mm:ss"
                                  android:textAlignment="textEnd"
                                  android:layout_marginEnd="2dp"
                                  android:layout_marginStart="8dp"
                                  android:id="@+id/lastLapTime"/>
                    </TableRow>
                    <TableRow>
                        <TextView android:text="前回結果"
                                  android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                                  android:textAlignment="textEnd"/>
                        <TextView android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                                  android:text="100%"
                                  android:textAlignment="textEnd"
                                  android:layout_marginEnd="2dp"
                                  android:layout_marginStart="8dp"
                                  android:id="@+id/lastAccuracyRate"/>
                    </TableRow>
                </TableLayout>
                <TextView android:layout_width="60dp"
                          android:layout_height="match_parent"
                          android:text="1day"
                          android:textStyle="bold|italic"
                          android:textAlignment="gravity"
                          android:textAllCaps="false"
                          android:gravity="center"
                          android:id="@+id/absStatus"/>
            </LinearLayout>
        </RelativeLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/sheetTitle"
                    android:textAppearance="@style/TextAppearance.AppCompat.Widget.Button.Inverse"
                    android:background="@color/colorPrimaryDark"
                    android:layout_marginTop="0dp"
                    android:layout_marginStart="0dp"
                    android:layout_marginEnd="0dp"
                    android:layout_marginBottom="0dp"
                    android:paddingStart="20dp"
                    android:paddingTop="4dp"/>

            <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/itemTitle"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large.Inverse"
                    android:background="@color/colorPrimaryDark"
                    android:layout_marginTop="0dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="0dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="0dp"
                    android:layout_marginBottom="0dp"
                    app:layout_constraintBottom_toTopOf="@+id/body"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:paddingStart="8dp" android:paddingBottom="8dp"/>
        </LinearLayout>

        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true"
                android:layout_above="@id/bottom_bar">
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">
                <android.support.v7.widget.RecyclerView
                        android:nestedScrollingEnabled="false"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginBottom="8dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:id="@+id/blockItem"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toTopOf="parent"/>
                <TextView
                        android:layout_width="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_height="100dp"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
    <RelativeLayout
            android:id="@+id/bottom_bar"
            android:gravity="bottom"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

        <Button
                android:id="@+id/previousItem"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:background="@android:drawable/ic_media_previous"/>
        <Button
                android:id="@+id/nextItem"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:background="@android:drawable/ic_media_next"/>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>