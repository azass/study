<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

        <Button
                android:id="@+id/normalMenu"
                android:layout_margin="20dp"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@drawable/menu_button"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent" android:text="抽象化リスト"
                android:textAppearance="@style/TextAppearance.AppCompat.Large.Inverse" android:textStyle="bold"
                android:textSize="30sp"/>

        <Button
                android:id="@+id/forgettingMenu"
                android:layout_margin="20dp"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@drawable/menu_button"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent" android:text="忘却リスト"
                android:textAppearance="@style/TextAppearance.AppCompat.Large.Inverse" android:textSize="30sp"
                android:textStyle="bold"/>

        <Button
                android:id="@+id/wastingMenu"
                android:layout_margin="20dp"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@drawable/menu_button"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent" android:text="ムダリスト"
                android:textAppearance="@style/TextAppearance.AppCompat.Large.Inverse" android:textSize="30sp"
                android:textStyle="bold"/>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>