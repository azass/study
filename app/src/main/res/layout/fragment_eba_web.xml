<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/activity_webview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                tools:context=".app.eba.EbaWebActivity" android:focusableInTouchMode="true">

    <WebView
            android:id="@+id/eba_web"
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true" android:layout_marginBottom="50dp"
            android:layout_marginTop="0dp" android:layout_height="680dp">

    </WebView>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:gravity="bottom|center">
        <Button
                android:text="停止"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/stopWebButton"
                android:layout_alignParentBottom="true"
                android:textSize="18sp"/>
        <Button
                android:text="メモ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/memoWebButton"
                android:layout_alignParentBottom="true"
                android:textSize="18sp"/>
    </LinearLayout>

</RelativeLayout>