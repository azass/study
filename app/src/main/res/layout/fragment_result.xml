<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:background="@color/colorNavIcon">

    <RelativeLayout
            android:id="@+id/daysLeftL"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="1dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintBottom_toTopOf="@+id/progressBar"
            android:layout_width="60dp" android:layout_marginLeft="320dp">

        <TextView
                android:text="あと"
                android:textSize="12sp"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_alignParentRight="true"
                android:layout_alignParentLeft="true"/>
        <TextView
                android:id="@+id/daysLeft"
                android:textSize="12sp"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:text="222" android:layout_centerInParent="true"
                android:layout_alignParentRight="true" android:layout_marginRight="13dp"/>
        <TextView
                android:text="日"
                android:textSize="12sp"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_alignParentRight="true"/>

    </RelativeLayout>
    <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_centerInParent="true"
            android:indeterminate="false"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:visibility="visible"
            android:progressDrawable="@drawable/horizontal_progress"
            android:background="@android:color/holo_orange_dark"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/daysLeftL"
            app:layout_constraintBottom_toTopOf="@+id/countLeftL"/>

    <RelativeLayout
            android:id="@+id/countLeftL"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="1dp"
            app:layout_constraintTop_toBottomOf="@+id/progressBar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/studyProgressBar"
            app:layout_constraintVertical_bias="0.0"
            android:layout_width="60dp"
            android:layout_marginLeft="320dp">

        <TextView
                android:text="あと"
                android:textSize="12sp"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_alignParentRight="true"
                android:layout_alignParentLeft="true"/>
        <TextView
                android:id="@+id/countLeft"
                android:textSize="12sp"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:text="222"
                android:layout_centerInParent="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="13dp"/>
        <TextView
                android:text="問"
                android:textSize="12sp"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"/>

    </RelativeLayout>

    <ProgressBar
            android:id="@+id/studyProgressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="18dp"
            android:layout_centerInParent="true"
            android:indeterminate="false"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:visibility="visible"
            android:progressDrawable="@drawable/horizontal_progress"
            android:background="@android:color/holo_orange_dark"
            app:layout_constraintTop_toBottomOf="@+id/countLeftL"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@+id/cardLayout"/>

    <androidx.cardview.widget.CardView
            android:id="@+id/cardLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:elevation="2dp" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="9dp" app:layout_constraintTop_toBottomOf="@+id/studyProgressBar"
            android:layout_marginBottom="15dp" app:layout_constraintBottom_toTopOf="@+id/linearLayout2">
        <TableLayout
                android:id="@+id/tableLayout"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                tools:layout_editor_absoluteX="117dp" tools:layout_editor_absoluteY="100dp"
                android:layout_marginEnd="30dp">

            <TableRow android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:layout_marginBottom="3dp">
                <TextView
                        android:id="@+id/header"
                        android:layout_width="52dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_column="1" android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>
                <TextView
                        android:id="@+id/trendHeader1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>
                <TextView
                        android:id="@+id/yesterdayHeader"
                        android:text="前日"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium" android:textAlignment="textEnd"
                        android:textStyle="bold" android:fontFamily="@font/anonymous_pro" android:typeface="normal"
                        android:textSize="16sp"/>
                <TextView
                        android:id="@+id/trendHeader2"
                        android:layout_width="10dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>
                <TextView
                        android:id="@+id/todayHeader"
                        android:text="今日"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_span="1" android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textAlignment="textEnd" android:textStyle="bold" android:textSize="16sp"/>
                <TextView
                        android:id="@+id/trendHeader3"
                        android:layout_width="10dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>
                <TextView
                        android:id="@+id/averageHeader"
                        android:text="平均"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_span="1" android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textAlignment="textEnd" android:textStyle="bold" android:textSize="16sp"/>
            </TableRow>
            <TableRow android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:layout_marginBottom="3dp" android:layout_gravity="center_horizontal">
                <TextView
                        android:id="@+id/textView23"
                        android:text="解答数"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_span="1"
                        android:layout_column="1" android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textAlignment="textEnd" android:textStyle="bold" android:textSize="16sp"/>
                <TextView
                        android:id="@+id/trendCount1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textAlignment="textEnd" android:textStyle="bold"
                        android:textColor="@android:color/holo_green_dark" android:textSize="18sp"
                />
                <TextView
                        android:id="@+id/yesterdayCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_span="1" android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textAlignment="textEnd"/>
                <TextView
                        android:id="@+id/trendCount2"
                        android:layout_width="10dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textAlignment="textEnd" android:text="↓"
                        android:textColor="@android:color/holo_red_light" android:textStyle="bold"
                        android:textSize="18sp"/>
                <TextView
                        android:id="@+id/todayCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_span="1" android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textAlignment="textEnd"/>
                <TextView
                        android:id="@+id/trendCount3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textAlignment="center"
                        android:textColor="@android:color/holo_red_light" android:textStyle="bold"
                        android:textSize="18sp"/>
                <TextView
                        android:id="@+id/averageCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_span="1" android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textAlignment="textEnd"/>

            </TableRow>
            <TableRow android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:layout_marginBottom="3dp">
                <TextView
                        android:id="@+id/textView33"
                        android:text="正解数"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_span="1"
                        android:layout_column="1" android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textAlignment="textEnd" android:textStyle="bold" android:textSize="16sp"/>
                <TextView
                        android:id="@+id/trendClearCount1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textAlignment="center" android:paddingRight="5dp"/>
                <TextView
                        android:id="@+id/yesterdayClearCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_span="1" android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textAlignment="textEnd"/>
                <TextView
                        android:id="@+id/trendClearCount2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textAlignment="center" android:paddingRight="5dp"/>
                <TextView
                        android:id="@+id/todayClearCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_span="1"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textAlignment="textEnd"/>
                <TextView
                        android:id="@+id/trendClearCount3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textAlignment="center"/>
                <TextView
                        android:id="@+id/averageClearCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_span="1"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textAlignment="textEnd"/>

            </TableRow>
            <TableRow android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:layout_marginBottom="3dp">
                <TextView
                        android:id="@+id/textView43"
                        android:text="解答時間"
                        android:layout_width="56dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_span="1"
                        android:layout_column="1"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textAlignment="textEnd" android:textStyle="bold" android:textSize="16sp"/>
                <TextView
                        android:id="@+id/trendPlayTime1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textAlignment="textEnd" android:paddingRight="5dp"/>
                <TextView
                        android:id="@+id/yesterdayPlayTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_span="1"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textAlignment="textEnd" android:text="1:00:00"/>
                <TextView
                        android:id="@+id/trendPlayTime2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textAlignment="center" android:paddingRight="5dp"/>
                <TextView
                        android:id="@+id/todayPlayTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_span="1"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textAlignment="textEnd" android:text="1:00:00"/>
                <TextView
                        android:id="@+id/trendPlayTime3"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textAlignment="center"/>
                <TextView
                        android:id="@+id/averagePlayTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_span="1"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textAlignment="textEnd" android:text="1:00:00"/>

            </TableRow>
        </TableLayout>
    </androidx.cardview.widget.CardView>
    <RelativeLayout
            android:id="@+id/linearLayout2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toBottomOf="@+id/cardLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
    >

        <androidx.cardview.widget.CardView
                android:layout_width="300dp"
                android:layout_height="wrap_content" app:cardBackgroundColor="@color/colorPink"
                app:cardCornerRadius="10dip" app:cardElevation="4dp"
                app:cardPreventCornerOverlap="false" app:cardUseCompatPadding="true">

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp">

                <TextView
                        android:id="@+id/resultComment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textAlignment="viewStart" android:text="プレイするだわん！！" android:layout_marginTop="10dp"
                        android:layout_marginStart="10dp" android:layout_above="@+id/quotation"
                        android:layout_marginEnd="10dp" android:layout_marginBottom="10dp"
                        android:layout_alignParentTop="true" android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true" android:textStyle="bold" tools:text="プレイするだわん！！"/>
                <TextView
                        android:id="@+id/quotation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textAlignment="textEnd" android:text="ローマは一日にして成らずローマは一日にして成らず！"
                        android:layout_alignParentTop="false"
                        android:layout_alignParentEnd="false" android:layout_alignParentStart="false"
                        android:layout_alignParentBottom="true"
                        android:textStyle="italic"
                        android:layout_marginLeft="10dp" android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"/>
                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1" android:layout_marginTop="10dp">
                    <ImageButton
                            android:id="@+id/imageButton1"
                            android:layout_width="70dp"
                            android:layout_height="30dp"
                            android:background="@drawable/like_normal"
                            android:layout_alignParentEnd="false"
                            android:layout_centerInParent="false" android:layout_alignParentRight="true"
                            android:layout_marginRight="40dp"/>

                    <TextView
                            android:id="@+id/likeCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:text="10"
                            android:layout_alignParentEnd="false"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="false"
                            android:layout_marginRight="10dp"
                            android:textStyle="bold"
                            android:textAlignment="textEnd" android:layout_centerVertical="true"/>
                </RelativeLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <ImageView
                android:id="@+id/imageView2"
                android:layout_width="80dp"
                android:layout_height="100dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                app:srcCompat="@drawable/lasswie_anger"
                android:layout_marginRight="0dp"
                android:layout_marginTop="10dp"/>
    </RelativeLayout>

    <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/bar_chart"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintVertical_bias="0.0"/>
</android.support.constraint.ConstraintLayout>