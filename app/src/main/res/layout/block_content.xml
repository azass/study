<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:elevation="1dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="10dp">

            <RelativeLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView android:id="@+id/seqNo" android:layout_width="0dp" android:layout_height="0dp"/>
                <TextView
                        android:text="TextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/body"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"
                        android:layout_marginBottom="8dp"
                        android:layout_marginEnd="21dp"
                        android:layout_marginStart="8dp"
                        android:textSize="18sp"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:layout_marginTop="5dp" android:layout_alignParentEnd="true"/>

                <Button
                        android:id="@+id/cardOptions"
                        android:layout_width="15dp"
                        android:layout_height="30dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentTop="true"
                        android:text="&#8942;"
                        android:textAppearance="?android:textAppearanceLarge"
                        android:layout_marginEnd="10dp"
                        android:layout_marginTop="0dp" android:background="@android:color/transparent"
                        android:textStyle="bold"/>
            </RelativeLayout>
            <RelativeLayout
                    android:id="@+id/bottom_bar"
                    android:gravity="bottom"
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginEnd="5dp">

                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:gravity="bottom" android:layout_marginTop="8dp">

                    <TableLayout android:layout_width="wrap_content"
                                 android:layout_height="wrap_content"
                                 android:layout_alignParentEnd="false"
                                 android:layout_alignParentBottom="true"
                                 android:gravity="bottom"
                                 android:layout_marginStart="10dp">
                        <TableRow>
                            <TextView android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                                      android:text="前回解答日"/>
                            <TextView android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                                      android:text="yyyy/MM/dd"
                                      android:textAlignment="textEnd"
                                      android:layout_marginStart="4dp"
                                      android:layout_marginEnd="2dp"
                                      android:id="@+id/lastPartExecDate"/>
                        </TableRow>
                        <TableRow>
                            <TextView android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                                      android:text="前回解答時間"/>
                            <TextView android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                                      android:text="HH:mm:ss"
                                      android:textAlignment="textEnd"
                                      android:layout_marginEnd="2dp"
                                      android:layout_marginStart="4dp"
                                      android:id="@+id/lastPartLapTime"/>
                        </TableRow>
                    </TableLayout>
                    <TableLayout android:layout_width="wrap_content"
                                 android:layout_height="wrap_content"
                                 android:layout_alignParentEnd="false"
                                 android:layout_alignParentBottom="true"
                                 android:gravity="bottom"
                                 android:layout_marginStart="10dp">
                        <TableRow>
                            <TextView android:text="前回結果"
                                      android:textAppearance="@style/TextAppearance.AppCompat.Caption"/>
                            <TextView android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                                      android:text="◎"
                                      android:textAlignment="textEnd"
                                      android:layout_marginEnd="2dp"
                                      android:layout_marginStart="4dp" android:id="@+id/lastPartResult"/>
                        </TableRow>
                    </TableLayout>
                </LinearLayout>
                <Button
                        android:id="@+id/hint"
                        android:text="?"
                        android:textAppearance="?android:textAppearanceLarge"
                        android:textStyle="bold"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:background="@android:color/transparent"
                        android:textAlignment="center"
                        android:textSize="24sp"
                        android:layout_marginEnd="100dp"
                        android:textColor="@android:color/holo_orange_dark"/>

                <Button
                        android:id="@+id/answer"
                        android:text="答え"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:background="@color/colorNavIcon"/>

                <Button
                        android:id="@+id/correct"
                        android:text="⭕"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginEnd="44dp"
                        android:layout_width="38dp"
                        android:background="@color/colorNavIcon" android:layout_height="38dp"/>

                <Button
                        android:id="@+id/incorrect"
                        android:text="❌"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_width="38dp"
                        android:layout_height="38dp"
                        android:layout_marginEnd="0dp"
                        android:background="@color/colorNavIcon"/>

            </RelativeLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</android.support.constraint.ConstraintLayout>